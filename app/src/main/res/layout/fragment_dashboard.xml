<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.LevelUp.ui.dashboard.DashboardFragment">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/dashboard_toolbar"
                app:title="@string/title_dashboard"
                android:elevation="5dp"
                app:titleTextColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                app:menu="@menu/dashboard_top_menu" />

            <androidx.cardview.widget.CardView
                android:id="@+id/trending"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                android:elevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/dashboard_toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/trending_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRENDING"
                        android:fontFamily="@font/franchise_filled"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="65sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/upcoming_occasions"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/trending">

                <androidx.cardview.widget.CardView
                    android:id="@+id/upcoming_jios"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="7.5dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="true"
                    android:elevation="1dp"
                    app:layout_constraintTop_toBottomOf="@id/dashboard_toolbar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/uc_jios"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming Jios"
                            android:elevation="0.7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginStart="7dp"
                            android:fontFamily="@font/franchise"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="45sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/upcoming_events"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="7.5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="true"
                    android:elevation="1dp"
                    app:layout_constraintTop_toBottomOf="@id/dashboard_toolbar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/uc_events"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming Events"
                            android:elevation="0.7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginStart="7dp"
                            android:fontFamily="@font/franchise"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="45sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:theme="@style/CalendarViewCustom"
                app:layout_constraintTop_toBottomOf="@id/upcoming_occasions"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="60dp"
                android:layout_marginBottom="56dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>`
</RelativeLayout>