<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/activity_vertical_margin"
    tools:context="com.Jios.LevelUp.ui.jios.JiosAdder">


    <EditText
        android:id="@+id/event_title"
        android:hint="Jio Title"
        android:maxLength="64"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jio Location"
        android:maxLength="95"
        android:text="" />

    <EditText
        android:id="@+id/event_description"
        android:hint="Jio Description"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:maxLength="1200"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_button" />
        <TextView
            android:id="@+id/date_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Date Selected"
            android:layout_marginStart="4dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_button" />
        <TextView
            android:id="@+id/time_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Time Selected"
            android:layout_marginStart="4dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/jio_spinner"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/save_jio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Jio" />


</LinearLayout>