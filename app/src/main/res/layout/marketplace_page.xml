<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/listing_image_full"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/fake_user_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listing_title_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"/>

        <ImageView
            android:id="@+id/like_button"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_action_like" />

        <ImageView
            android:id="@+id/chat_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_chat_bubble_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/meetup_location_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="meetup location"/>

    <TextView
        android:id="@+id/listing_description_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"/>

</LinearLayout>